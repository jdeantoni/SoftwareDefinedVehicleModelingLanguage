{
    "name": "sdvml",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "files": [
        "bin",
        "out",
        "src"
    ],
    "type": "commonjs",
    "scripts": {
        "build": "tsc -b tsconfig.src.json && node esbuild.mjs",
        "watch": "concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.src.json --watch\" \"node esbuild.mjs --watch\"",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:generate:production": "langium generate --mode=production",
        "langium:watch": "langium generate --watch",
        "vscode:prepublish": "npm run build && npm run lint",
        "build:web": "npm run build",
        "bundle": "vite build",
        "bundle:serve": "http-server ./dist --port 5175",
        "dev": "vite",
        "dev:debug": "vite --debug --force",
        "serve": "npm run dev",
        "test": "vitest run",
        "cli:info": "node ./bin/cli",
        "cli": "node ./bin/cli generate --destination ../demo/generated/",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@codingame/monaco-vscode-editor-service-override": "~3.2.3",
        "@codingame/monaco-vscode-keybindings-service-override": "~3.2.3",
        "@eclipse-glsp/client": "2.3.0",
        "@eclipse-glsp/layout-elk": "2.3.0",
        "@eclipse-glsp/protocol": "2.3.0",
        "@eclipse-glsp/server": "2.3.0",
        "@eclipse-glsp/sprotty": "2.3.0",
        "@eclipse-glsp/vscode-integration": "2.3.0",
        "@eclipse-glsp/vscode-integration-webview": "2.3.0",
        "chalk": "~5.4.1",
        "commander": "~11.1.0",
        "langium": "~3.5.0",
        "monaco-editor": "npm:@codingame/monaco-vscode-editor-api@~3.2.3",
        "monaco-editor-wrapper": "~4.0.2",
        "monaco-languageclient": "~8.1.1",
        "object-hash": "^3.0.0",
        "vscode": "npm:@codingame/monaco-vscode-api@~3.2.3",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1",
        "elkjs": "0.8.1"
    },
    "devDependencies": {
        "@codingame/esbuild-import-meta-url-plugin": "~1.0.2",
        "@types/estree": "^1.0.7",
        "@types/node": "~20.11.7",
        "@types/object-hash": "^3.0.6",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/vscode": "^1.96.0",
        "@types/vscode-webview": "^1.57.5",
        "@typescript-eslint/eslint-plugin": "~6.4.1",
        "@typescript-eslint/parser": "~6.4.1",
        "@vscode/codicons": "^0.0.25",
        "@vscode/vsce": "~3.2",
        "balloon-css": "^0.5.0",
        "concurrently": "~8.2.1",
        "esbuild": "~0.25.4",
        "esbuild-plugin-copy": "^2.1.1",
        "eslint": "~8.47.0",
        "http-server": "~14.1.1",
        "langium-cli": "~3.5.0",
        "prettier": "^3.5.3",
        "typescript": "~5.0.4"
   
    },
    "volta": {
        "node": "18.19.1",
        "npm": "10.2.4"
    },
    "displayName": "sdvml",
    "engines": {
        "vscode": "^1.67.0",
        "node": ">=18.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "sdvml",
                "aliases": [
                    "sdvml",
                    "sdvml"
                ],
                "extensions": [
                    ".Sdvml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "sdvml",
                "scopeName": "source.sdvml",
                "path": "syntaxes/sdvml.tmLanguage.json"
            }
        ],
        "customEditors": [
            {
                "viewType": "sdvml.glspDiagram",
                "displayName": "SDVML Diagram Editor",
                "selector": [
                    {
                        "filenamePattern": "*.sdvml"
                    }
                ],
                "priority": "option"
            }
        ]
    },
    "activationEvents": [],
    "main": "./out/extension/main.cjs",
    "bin": {
        "sdvml-cli": "./bin/cli.js"
    }
}
