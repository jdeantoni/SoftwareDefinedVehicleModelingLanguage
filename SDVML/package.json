{
    "name": "sdvml",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "files": [
        "bin",
        "out",
        "src"
    ],
    "type": "module",
    "scripts": {
        "build": "tsc -b tsconfig.src.json && node esbuild.mjs",
        "watch": "concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.src.json --watch\" \"node esbuild.mjs --watch\"",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:generate:production": "langium generate --mode=production",
        "langium:watch": "langium generate --watch",
        "vscode:prepublish": "npm run build && npm run lint",
        "build:web": "npm run build",
        "bundle": "vite build",
        "bundle:serve": "http-server ./dist --port 5175",
        "dev": "vite",
        "dev:debug": "vite --debug --force",
        "serve": "npm run dev",
        "test": "vitest run",
        "cli:info": "node ./bin/cli",
        "cli": "node ./bin/cli generate --destination ../demo/generated/",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@codingame/monaco-vscode-editor-service-override": "~3.2.3",
        "@codingame/monaco-vscode-keybindings-service-override": "~3.2.3",
        "chalk": "~5.3.0",
        "commander": "~11.0.0",
        "langium": "~3.5.0",
        "monaco-editor": "npm:@codingame/monaco-vscode-editor-api@~3.2.3",
        "monaco-editor-wrapper": "~4.0.2",
        "monaco-languageclient": "~8.1.1",
        "vscode": "npm:@codingame/monaco-vscode-api@~3.2.3",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1",
        "@eclipse-glsp/sprotty": "2.4.0",
        "@eclipse-glsp/protocol": "2.4.0",
        "@kieler/klighd-core": "0.7.0",
        "@kieler/klighd-interactive": "0.7.0",
        "langium-sprotty": "3.5.0"
        
    },
    "devDependencies": {
        "@codingame/esbuild-import-meta-url-plugin": "~1.0.2",
        "@types/node": "^18.0.0",
        "@types/vscode": "~1.67.0",
        "@typescript-eslint/eslint-plugin": "~7.3.1",
        "@typescript-eslint/parser": "~7.3.1",
        "concurrently": "~8.2.1",
        "esbuild": "^0.25.4",
        "eslint": "~8.57.0",
        "http-server": "~14.1.1",
        "langium-cli": "~3.5.0",
        "prettier": "^3.5.3",
        "typescript": "~5.1.6",
        "vite": "^5.4.19",
        "vitest": "^1.6.1"
    },
    "extensionDependencies": [
        "kieler.klighd-vscode"
    ],
    "volta": {
        "node": "18.19.1",
        "npm": "10.2.4"
    },
    "displayName": "sdvml",
    "engines": {
        "vscode": "^1.67.0",
        "node": ">=18.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "sdvml",
                "aliases": [
                    "sdvml",
                    "sdvml"
                ],
                "extensions": [
                    ".Sdvml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "sdvml",
                "scopeName": "source.sdvml",
                "path": "syntaxes/sdvml.tmLanguage.json"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == sdvml",
                    "command": "klighd-vscode.diagram.open",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "when": "resourceLangId == sdvml",
                    "command": "klighd-vscode.diagram.open",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceLangId == sdvml",
                    "command": "klighd-vscode.diagram.open",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
            "command": "klighd-vscode.diagram.open",
            "title": "Open SDVML Diagram"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:sdvml"
    ],
    "main": "./out/extension/main.cjs",
    "bin": {
        "sdvml-cli": "./bin/cli.js"
    }
}
